<DailyRoutineScreen>:
    on_kv_post: root.fill_todo_list()
    BoxLayout:
        ScrollView:
            BoxLayout:
                size_hint: 1, 1
                orientation: 'vertical'

                ScrollView:
                    GridLayout:
                        id: todo_list_layout
                        size_hint: 1, None
                        cols: 7

                Button:
                    size_hint: 1, None
                    height: 35
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: app.get_running_app().root.current = 'ToDoListScreen'
                    text: 'To-Do List'

                GridLayout:
                    rows: 1
                    cols: 2
                    height: 50
                    row_default_height:50

                    Button:
                        text: 'Make Diary Record'

                    Button:
                        text: 'Add New Idea'

                Button:
                    height: 50
                    text: 'Day Summary(End Day)'
                