<ProjectScreen>:
    on_pre_enter:
        root.pre_enter()
    ScrollView:
        BoxLayout:
            size_hint: 1, 2
            orientation: 'vertical'
            Button:
                size_hint: 1, None
                height: 25
                text: '<'
                on_press: root.manager.current = 'MenuScreen'
            TextInput:
                height: 25
                id: project_name_input
                hint_text: 'name'
            TextInput:
                height: 25
                id: project_mark_input
                hint_text: 'mark'
            TextInput:
                height: 25
                id: project_reason_input
                hint_text: 'reason'
            TextInput:
                height: 25
                id: project_criteria_input
                hint_text: 'criteria'
            Button:
                text: 'Save'
                on_press:
                    root.project_changes_save()
            BoxLayout:
                height: 25
                orientation: 'horizontal'
                ProgressBar: 
                    id: project_progress_bar
                    size_hint: 0.8, None
                    value: 0
                    min: 0
                    max: 100
                Label:
                    id: progress_label
                    size_hint: 0.2, None
                    text: '0%'
            Label:
                height: 25
                text: 'Plan:'
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    ScrollView:
                        size_hint: 1, None
                        height: 100
                        BoxLayout:
                            TreeView:
                                id: planTree
                                hide_root: True
            BoxLayout:
                Button:
                    text:'Add Phase'
                    on_press: root.add_phase_button_clicked()
                TextInput:
                    id: phase_name_input
                    hint_text: 'phase name'
                TextInput:
                    id: phase_criteria_input
                    hint_text: 'phase criteria'
                Button:
                    text: 'remove phase'
                    on_press: root.remove_phase_button_clicked()
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'up'
                        on_press: root.increase_phase_pos()
                    Button:
                        text: 'down'
                        on_press: root.decrease_phase_pos()
                Button:
                    text: 'Save'
                    on_press: 
                        root.save_phase_changes()
                        root.deselect_node()
                Spinner:
                    id: phase_percent_spinner
            BoxLayout:
                Button:
                    text: 'add task'
                    on_press: root.add_task_button_clicked()
                CheckBox:
                    id: task_done_checkbox
                TextInput:
                    id: task_name_input
                    hint_text: 'task name'
                Button:
                    text: 'create task in to-do bucket'
                Button:
                    text: 'up'
                    on_press: root.increase_task_pos()
                Button:
                    text: 'down'
                    on_press: root.decrease_task_pos()
                Button:
                    text: 'remove task'
                    on_press: root.remove_task_button_clicked()
                Button:
                    text: 'Save'
                    on_press: 
                        root.save_task_changes()
                        root.deselect_node()

            
