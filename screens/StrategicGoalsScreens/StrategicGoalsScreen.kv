<StrategicGoalsScreen>:
    on_kv_post: root.update_projects_layout()
	BoxLayout:
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                ScrollView:
                    size_hint: 1, 4
                    BoxLayout:
                        size_hint: 1, 2
                        orientation: 'vertical'
                        GridLayout:
                            cols: 6
                            size_hint: 1, 2
                            id: projectsLayout

                Button:
                    text: 'add Project'
                    on_press: root.add_project_button_clicked()

                Button:
                    text: 'Spheres Of Life'
                    on_press: app.get_running_app().root.current = 'SpheresOfLifeScreen'
                Button:
                    text: 'Franklin Pyramid'
                    on_press: app.get_running_app().root.current = 'FranklinPyramidScreen'
                Button:
                    text: 'Diary'
                    on_press: app.get_running_app().root.current = 'DiaryCalendarScreen'
