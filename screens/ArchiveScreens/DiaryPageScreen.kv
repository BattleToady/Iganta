                            text: 'happy'
                            on_press: root.emoji_button_clicked('happy')
                            Image:
                                x: self.parent.x + 2
                                y: self.parent.y + 2
                                source: 'icons\\emoji\\smile.png'
                                size: (self.parent.height - 2, self.parent.height - 2)
                                
                                
