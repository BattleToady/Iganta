<DiaryPageScreen>:
    on_enter: self.on_page_enter()
	BoxLayout:
		orientation: 'vertical'
        
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                Button:
                    size_hint: 1, 0.05
                    text: '<'
                    on_press: 
