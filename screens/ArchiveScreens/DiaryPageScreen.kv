                                size: (self.parent.height - 2, self.parent.height - 2)
                        Button:
                            text: 'tongue out'
                            Image:
                                x: self.parent.x + 2
                                y: self.parent.y + 2
                                source: 'icons\\emoji\\tongue-out.png'
                                size: (self.parent.height - 2, self.parent.height - 2)

                Label:
                    size_hint: 1, 0.05
                    text: 'My emoji today - '

                TextInput:
                    id: DiaryPageTextInput
                    on_text: root.diary_page_changed()